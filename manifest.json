{
  "manifest_version": 2,
  "name": "TredoList",
  "description": "Manage your todolist using horizontal card layout in Trello",
  "version": "0.1",
  "author": "Olivier Cado",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "*://trello.com/b/*",
    "tabs",
    "storage"
  ],

  "web_accessible_resources": [
    "css/layout.css",
    "css/theme-.css",
    "css/theme-bright.css",
    "css/theme-pastel.css",
    "css/theme-dark.css"
  ],
  "page_action": {
    "default_title": "Tredolist",
    "default_popup": "config.html"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      }
    }
  }
}
